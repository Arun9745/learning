//Arrow function
arrow function is used for function for giving data in one line
arrow function---> =>
Example:
   //Normal function
   let add=function(num1,num2){
     return num1+num2;
    }
   let sum=add(5,6)
   console.log(sum)

   //Arrow Function

    let ad=(num1,num2)=>num1+num2
    let su=ad(5,6)
    console.log(su)


//this Function
It is used for mention the object.
example:
   let laptop1={
   cpu:'i9',
   ram:16,
   brand:'hp',

   greet: function(){
   console.log(this.cpu);
   }
   }
   laptop1.greet();

   //Push
   add a value in the array.
   example:
    let data=[1,2,3,4]
    console.log(data.push(3));
    console.log(data)---->output:[1,2,3,4,3]


    //pop
    remove a value in the array.
    Last in first out.
    example:
    let data=[1,2,3,4]
    console.log(data.pop());
    console.log(data)---->output:[1,2,3]



    //shift
     Move a value in the array.
     First in first out.
     example:
     let data=[1,2,3,4]
     console.log(data.shift());
     console.log(data)---->output:[2,3,4]

     //UNSHIFT
     Add a value in the array.
     The value add in the first array.
     example:
     let data=[1,2,3,4]
     console.log(data.unshift(0));
     console.log(data)---->output:[0,1,2,3,4]

     //Splice
     t a remove a value in the middle.
     example:
     let data=[1,2,3,4]
     console.log(data.splice(1,1));
     console.log(data)---->output:[1,3,4]

     //array destructing
     let words="My name is Arun java script".split(' ');
      let [a,b,c,d,e,f]=words;
     console.log(d);

     //For each method
     let nums=[42,54,65,75,43];
      nums.forEach( n=>{
     console.log(n*2);
      });

      //Array Filter
      let num=[42,54,65,75,43];
      num.filter( n=>n%2===0)

      .forEach( n=>{
      console.log(n);
       });


      //Map Reduce
      It take a value and change it.

      let num=[1,2,3,4,5,6]
      let result=num.filter( n => n%2===0)
      .map(n => n*2)
      .reduce((a,b) => a+b);

       console.log(result);

       //Set
       In javascript the set function is not give repeat values.
       Example:bookkeeper-->output:'b''o''k''e''p''r'.


       //.has
       The .has function is used to boolean type of set.
       example:
       let numss=new Set();

       numss.add(1);
       numss.add(2);
       numss.add(3);
       numss.add("Arun");
       numss.add("Prasanth");
       numss.add("java script");

        console.log(numss.has(3));
        output:True.

        //map


       let map=new Map();

       map.set("Arun","java");
       map.set("Ravi","JavaScript");
       map.set("Allen","Bootstarp");

       console.log(map.get("Arun"));

       output:Java
